<div class="feature-promotion">
  <div class="feature-promotion-row">
    {% for block in section.blocks %}
    <div class="col-md-4">
      <div class="feature_box">
        <div class="inner_box" onclick="window.location.href='{{block.settings.buttonlink}}'">
          {% if block.settings.collection_img != blank %}
          <div class="image_box">
            <img src="{{block.settings.collection_img | img_url: 'master'}}">
          </div>
          {% endif %}
          <div class="feature_content">
            {% if block.settings.collection_name != blank %}
              <h2>{{block.settings.collection_name}}</h2>
            {% endif %}
            {% if block.settings.buttonlabel != blank %}
              <a href="{{block.settings.buttonlink}}">{{block.settings.buttonlabel}}</a>
            {% endif %}
          </div> 
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Featured Boxes",
    "class": "featured-boxes",
    "max_blocks": 3,
    "settings": [

    ],
    "blocks": [
      {
        "type": "Featured-Box",
        "name": "Featured Box",
        "settings": [
          {
            "type": "image_picker",
            "id": "collection_img",
            "label": "Image",
            "info": "800 x 500px .jpg recommended"
          },
          {
            "type": "text",
            "id": "collection_name",
            "label": "Collection Title"
          },
          {
            "type": "text",
            "id": "buttonlabel",
            "label": "Button Label "
          },
          {
            "type": "url",
            "id": "buttonlink",
            "label": "Button Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Box",
        "category": "Home",
        "blocks": [
        ]
      }
    ]
  }
{% endschema %}

